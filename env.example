# Database
DATABASE_URL="postgresql://user:password@localhost:5432/curacel_people?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3800"
NEXT_PUBLIC_APP_URL="http://localhost:3800"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# Development auth helpers (do not enable in production)
# DEV_PASSWORDLESS_LOGIN="true"
# NEXT_PUBLIC_DEV_PASSWORDLESS_LOGIN="true"
# DEV_AUTO_CREATE_SUPER_ADMIN="true"

# Google OAuth (for SSO)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Workspace Admin SDK (for user provisioning)
GOOGLE_WORKSPACE_DOMAIN="yourcompany.com"
GOOGLE_WORKSPACE_ADMIN_EMAIL="admin@yourcompany.com"
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# Slack Integration
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_SIGNING_SECRET="your-slack-signing-secret"
# Required for some Slack admin APIs (Enterprise Grid / admin scope)
# SLACK_TEAM_ID="T0123456789"
# Optional fallback for invitations when no channels are provided by rules
# SLACK_DEFAULT_CHANNEL_ID="C0123456789"

# DocuSign Integration
DOCUSIGN_INTEGRATION_KEY="your-docusign-integration-key"
DOCUSIGN_USER_ID="your-docusign-user-id"
DOCUSIGN_ACCOUNT_ID="your-docusign-account-id"
DOCUSIGN_BASE_PATH="https://demo.docusign.net/restapi"
DOCUSIGN_PRIVATE_KEY='-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----'
DOCUSIGN_WEBHOOK_SECRET="your-docusign-webhook-secret"

# Email (for sending notifications)
# Option A: Postmark (recommended)
# POSTMARK_SERVER_TOKEN="your-postmark-server-token"
# POSTMARK_FROM="Curacel People <hr@yourcompany.com>"
# POSTMARK_MESSAGE_STREAM="outbound"
#
# Option B: SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="notifications@yourcompany.com"
SMTP_PASSWORD="your-smtp-password"
EMAIL_FROM="Curacel People <hr@yourcompany.com>"

# Company settings
COMPANY_NAME="Curacel"
COMPANY_DOMAIN="curacel.com"
# Optional: defaults for agreement letterheads (used if org fields are empty)
# COMPANY_EMAIL="info@curacel.ai"
# COMPANY_WEBSITE="https://curacel.ai"
# COMPANY_PHONE="+234 803 525 7749"
# COMPANY_ADDRESS="19B Lawson Adeyemi Street, Ikoyi, Lagos"

# Encryption key for sensitive data stored in DB (32 bytes hex recommended).
# Required in production. In development, a derived fallback is used if missing (not recommended).
ENCRYPTION_KEY="your-32-byte-hex-encryption-key-here"
